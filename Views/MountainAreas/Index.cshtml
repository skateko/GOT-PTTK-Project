@model IEnumerable<GOTHelperEng.Models.MountainArea>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
}
<div id="indexTable" class="fixed-table-container">
    <div class="header-background"></div>
    <div class="fixed-table-container-inner">
<table cellspacing="0">
    <thead>
        <tr>
            <th class="first">
                <div class="th-inner">
                    @Html.DisplayNameFor(model => model.MoutainAreaName)
                </div>
          </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MoutainAreaName)
            </td>
           
             @if (User.IsInRole("Admin"))
                {
                    <td class ="buttonColumn">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.MountainAreaId">Edit</a>
                    </td>
                    <td class="buttonColumn">
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.MountainAreaId">Delete</a>
                    </td>
                }
           <td class="buttonColumn">
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.MountainAreaId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>

</div>
</div>