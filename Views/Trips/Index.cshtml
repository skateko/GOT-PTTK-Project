@model IEnumerable<GOTHelperEng.Models.Trip>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
}

<div id="indexTable" class="fixed-table-container">
    <div class="header-background"></div>
    <div class="fixed-table-container-inner">
<table cellspacing="0">
    <thead>
        <tr>
            <th class="first">
                <div class="th-inner">
                    @Html.DisplayNameFor(model => model.TripId)
                </div>
            </th>
            <th>
                <div class="th-inner">
                    @Html.DisplayNameFor(model => model.StartDate)
                </div>
            </th>
            <th>
                <div class="th-inner">
                @Html.DisplayNameFor(model => model.EndDate)
                </div>
            </th>
            <th>
                <div class="th-inner">
                @Html.DisplayNameFor(model => model.Points)
                </div>
            </th>
            @if (User.IsInRole("Admin"))
                    {
                        <th>
                            <div class="th-inner">
                                Edit
                            </div>
                        </th>
                        <th>
                            <div class="th-inner">
                Delete
                </div>
            </th>
             }
            <th>
                <div class="th-inner">
                Details
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TripId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            @if (User.IsInRole("Admin"))
                {
                    <td class ="buttonColumn">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.TripId">Edit</a>
                    </td>
                    <td class="buttonColumn">
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.TripId">Delete</a>
                    </td>
                }
           <td class="buttonColumn">
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.TripId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
</div>